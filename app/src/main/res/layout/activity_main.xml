<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    >

    <com.jayzhao.customactionbar.another_world.Widget.TypefaceTextView
        android:fontFamily="miui_light"
        android:id="@+id/full_screen"
        android:background="@drawable/button_background"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="全屏的显示风格"
        android:layout_marginTop="30dp"
        />

    <com.jayzhao.customactionbar.another_world.Widget.TypefaceTextView
        android:fontFamily="din_med"
        android:background="@drawable/button_background"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="RecyclerView tel: 18119602814"
        android:layout_marginTop="30dp"
        android:id="@+id/recyclerViewText"
        />

    <com.jayzhao.customactionbar.another_world.Widget.TypefaceTextView
        android:fontFamily="pt_din"
        android:background="@drawable/button_background"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="TableLayout  tel: 18119602814"
        android:layout_marginTop="30dp"
        android:id="@+id/tableLayoutText"
        />

    <com.jayzhao.customactionbar.another_world.Widget.TypefaceTextView
        android:fontFamily="miui_bold"
        android:background="@drawable/button_background"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="自定义的浏览器视图"
        android:layout_marginTop="30dp"
        android:id="@+id/webText"
        />

    <TextView
        android:background="@drawable/button_background"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="ChangeAnimation"
        android:layout_marginTop="30dp"
        android:id="@+id/changeAnimation"
        />

    <TextView
        android:background="@drawable/button_background"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="Loading Dialog"
        android:layout_marginTop="30dp"
        android:id="@+id/promptDiglog"
        />

    <TextView
        android:background="@drawable/button_background"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="Click me to next Page"
        android:layout_marginTop="30dp"
        android:id="@+id/nextPage"
        />

    <com.jayzhao.customactionbar.another_world.Widget.DownloadProgressView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>
